:root {
    /* Nexus AI Palette */
    --bg-deep: #000000;
    /* Deep Black for Aurora look */
    --bg-glass: rgba(20, 20, 20, 0.6);
    --bg-glass-light: rgba(255, 255, 255, 0.03);
    --primary: #ffffff;
    --primary-glow: rgba(255, 255, 255, 0.1);
    --accent: #3b82f6;
    /* Blue accent */
    --text-main: #ffffff;
    --text-muted: #a1a1aa;
    --border-glass: rgba(255, 255, 255, 0.08);

    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #ffffff 0%, #a1a1aa 100%);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Plus Jakarta Sans', sans-serif;
    background-color: var(--bg-deep);
    color: var(--text-main);
    height: 100vh;
    overflow: hidden;
    display: flex;
}

/* Glassmorphism Utilities */
.glass {
    background: var(--bg-glass);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-right: 1px solid var(--border-glass);
}

.glass-panel {
    background: var(--bg-glass-light);
    backdrop-filter: blur(12px);
    border: 1px solid var(--border-glass);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
}

/* Layout */
.app-container {
    display: flex;
    width: 100%;
    height: 100%;
    position: relative;
}

/* Sidebar */
.sidebar {
    width: 280px;
    display: flex;
    flex-direction: column;
    padding: 24px;
    gap: 24px;
    z-index: 10;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.logo {
    display: flex;
    align-items: center;
    gap: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: white;
    padding-bottom: 12px;
    letter-spacing: 0.5px;
}

.logo i {
    font-size: 1.4rem;
}

.new-chat-btn {
    width: 100%;
    padding: 12px;
    background: white;
    color: black;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.2s ease;
}

.new-chat-btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
}

/* Modes */
.modes-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 8px;
}

.mode-card {
    padding: 12px 16px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
    position: relative;
    background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.03) 0%, transparent 50%);
}

.chat-header {
    padding: 20px 32px;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.status-badge {
    font-size: 0.75rem;
    color: var(--text-muted);
    padding: 4px 12px;
    border: 1px solid var(--border-glass);
    border-radius: 20px;
    background: rgba(0, 0, 0, 0.3);
}

/* Messages */
.messages-container {
    flex: 1;
    overflow-y: auto;
    padding: 32px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    scroll-behavior: smooth;
}

.message {
    display: flex;
    gap: 16px;
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
}

.message.user {
    justify-content: flex-end;
}

.avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    flex-shrink: 0;
}

.bot-avatar {
    background: white;
    color: black;
}

.user-avatar {
    background: var(--bg-glass-light);
    color: white;
    border: 1px solid var(--border-glass);
}

.message-bubble {
    padding: 12px 0;
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-muted);
    max-width: 100%;
}

.message.user .message-bubble {
    color: white;
    background: var(--bg-glass-light);
    padding: 12px 20px;
    border-radius: 12px;
    border: 1px solid var(--border-glass);
}

.message.bot .message-bubble {
    color: var(--text-main);
}

/* Markdown Styles */
.message-bubble h1,
.message-bubble h2,
.message-bubble h3 {
    color: white;
    margin-top: 16px;
    margin-bottom: 8px;
    font-weight: 600;
}

.message-bubble p {
    margin-bottom: 8px;
}

.message-bubble ul,
.message-bubble ol {
    margin-left: 20px;
    margin-bottom: 12px;
}

.message-bubble li {
    margin-bottom: 4px;
}

.message-bubble strong {
    color: white;
    font-weight: 600;
}

/* Input Area */
.input-area {
    padding: 24px 32px;
    display: flex;
    justify-content: center;
}

.input-wrapper {
    width: 100%;
    max-width: 768px;
    position: relative;
    display: flex;
    gap: 12px;
    background: var(--bg-glass-light);
    padding: 12px 16px;
    border-radius: 12px;
    border: 1px solid var(--border-glass);
    transition: all 0.2s ease;
}

.input-wrapper:focus-within {
    border-color: rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
}

.chat-input {
    flex: 1;
    background: transparent;
    border: none;
    color: white;
    font-family: inherit;
    font-size: 1rem;
    resize: none;
    outline: none;
    max-height: 200px;
}

.send-btn {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    border: none;
    background: white;
    color: black;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.send-btn:hover {
    opacity: 0.9;
}

/* Welcome Screen */
.welcome-screen {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 100%;
    max-width: 600px;
}

.early-preview {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 24px;
}

.welcome-title {
    font-family: 'Outfit', sans-serif;
    font-size: 3.5rem;
    font-weight: 500;
    margin-bottom: 16px;
    color: white;
    letter-spacing: -1px;
}

.welcome-title span {
    color: var(--text-muted);
    font-weight: 300;
}

.welcome-subtitle {
    color: var(--text-muted);
    font-size: 1.1rem;
    margin-bottom: 48px;
    font-weight: 300;
}

.quick-actions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    max-width: 600px;
    margin: 0 auto;
}

.action-card {
    padding: 32px 24px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 12px;
}

.action-card:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.2);
}

.card-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    font-size: 1.5rem;
    color: white;
}

.action-card h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: white;
    margin-bottom: 8px;
}

.action-card p {
    font-size: 0.85rem;
    color: var(--text-muted);
}

.action-chip {
    padding: 8px 16px;
    border-radius: 20px;
    border: 1px solid var(--border-glass);
    background: transparent;
    color: var(--text-muted);
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s ease;
}

.action-chip:hover {
    border-color: white;
    color: white;
    background: rgba(255, 255, 255, 0.05);
}

/* Typing Indicator */
.typing-indicator {
    display: flex;
    gap: 6px;
    padding: 12px 16px;
    background: var(--bg-glass);
    border-radius: 20px;
    width: fit-content;
    margin-left: 58px;
    margin-bottom: 20px;
}

.dot {
    width: 8px;
    height: 8px;
    background: var(--text-muted);
    border-radius: 50%;
    animation: bounce 1.4s infinite;
}

.dot:nth-child(2) {
    animation-delay: 0.2s;
}

.dot:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes bounce {

    0%,
    100% {
        transform: translateY(0);
        opacity: 0.5;
    }

    50% {
        transform: translateY(-6px);
        opacity: 1;
    }
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Mobile */
@media (max-width: 768px) {
    .sidebar {
        position: fixed;
        left: -100%;
        height: 100%;
        background: var(--bg-deep);
    }

    .sidebar.open {
        left: 0;
    }

    .quick-actions {
        grid-template-columns: 1fr;
    }
}